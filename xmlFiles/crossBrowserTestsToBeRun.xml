<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="CrossBrowser Tests">
    
    <test name="Tests to run with Chrome">
        <parameter name="crossBrowser" value="chrome"></parameter>
        <packages>
            <package name="tests.P17_crossBrowserRunnableTests"></package>
        </packages>
    </test>
    <test name="Tests to run with Firefox">
        <parameter name="crossBrowser" value="firefox"></parameter>
        <packages>
            <package name="tests.P17_crossBrowserRunnableTests"></package>
        </packages>
    </test>
</suite>