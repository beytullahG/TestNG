<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="CrossBrowser tests" parallel="tests" thread-count="2" verbose="3">

    <test name="Tests to run with Chrome">
        <parameter name="crossBrowser" value="chrome"></parameter>
        <packages>
            <package name="tests.day17_crossBrowserTesting"></package>
        </packages>
    </test>

    <test name="Tests to run with Firefox">
        <parameter name="crossBrowser" value="firefox"></parameter>
        <packages>
            <package name="tests.day17_crossBrowserTesting"></package>
        </packages>
    </test>

</suite>
